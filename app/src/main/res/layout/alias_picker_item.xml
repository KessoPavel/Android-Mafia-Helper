<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/api_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/unselected_list_item">

        <EditText
            android:id="@+id/api_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/base_text"
            android:textSize="@dimen/base_text"
            android:transitionName="@string/player_name_transition" />

        <TextView
            android:id="@+id/api_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/sub_text_size"
            tools:text="Ivan " />

        <Button
            android:id="@+id/api_clear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text=""
            tools:text=""
            android:background="@drawable/baseline_clear_24" />
    </FrameLayout>
</layout>