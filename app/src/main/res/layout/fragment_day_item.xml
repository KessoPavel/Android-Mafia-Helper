<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/fni_frame"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_figure">

        <TextView
            android:id="@+id/fni_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="â„–"
            android:textColor="@color/base_text"
            android:textSize="@dimen/base_text"
            />

        <TextView
            android:id="@+id/fni_pseudonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="player pseudonym"
            android:textColor="@color/base_text"
            android:textSize="@dimen/base_text"/>

        <TextView
            android:id="@+id/fni_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/sub_text_size"
            android:text="name" />

        <TextView
            android:id="@+id/fni_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/sub_text_size"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="status"
            />
    </FrameLayout>
</layout>