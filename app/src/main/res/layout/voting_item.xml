<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/v_frame"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/unselected_list_item">

        <TextView
            android:id="@+id/v_alias"
            android:transitionName="@string/player_name_transition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            tools:text="Ivan Grigoryev"
            android:textColor="@color/base_text"
            android:textSize="@dimen/base_text" />

        <TextView
            android:id="@+id/v_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/sub_text_size"
            tools:text="Ivan " />

        <TextView
            android:id="@+id/v_value"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            tools:text="1"/>
    </FrameLayout>
</layout>