<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graphs"
    app:startDestination="@id/playerListFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/playerListFragment"
        android:name="com.radiance.mafiahelper.fragment.PlayerListFragment"
        android:label="PlayerListFragment"
        tools:layout="@layout/fragment_player_list">
        <action
            android:id="@+id/action_playerListFragment_to_gameOptionsFragment"
            app:destination="@id/gameOptionsFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/out"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_out"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/gameOptionsFragment"
        android:name="com.radiance.mafiahelper.fragment.GameOptionsFragment"
        android:label="GameOptionsFragment"
        tools:layout="@layout/fragment_game_options">
        <action
            android:id="@+id/action_gameOptionsFragment_to_gettingToKnowFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/out"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_out"
            app:destination="@id/gettingToKnowFragment" />
    </fragment>
    <fragment
        android:id="@+id/gettingToKnowFragment"
        android:name="com.radiance.mafiahelper.fragment.GettingToKnowFragment"
        android:label="GettingToKnowFragment"
        tools:layout="@layout/fragment_getting_to_known">
        <action
            android:id="@+id/action_gettingToKnowFragment_to_firstNightFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/out"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_out"
            app:destination="@id/firstNightFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstNightFragment"
        android:name="com.radiance.mafiahelper.fragment.FirstNightFragment"
        android:label="FirstNightFragment"
        tools:layout="@layout/fragment_first_night">
        <action
            android:id="@+id/action_firstNightFragment_to_dayFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/out"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_out"
            app:destination="@id/dayFragment" />
    </fragment>
    <fragment
        android:id="@+id/dayFragment"
        android:name="com.radiance.mafiahelper.fragment.DayFragment"
        android:label="DayFragment"
        tools:layout="@layout/fragment_day">
        <action
            android:id="@+id/action_dayFragment_to_votingFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/out"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_out"
            app:destination="@id/votingFragment" />
    </fragment>
    <fragment
        android:id="@+id/votingFragment"
        android:name="com.radiance.mafiahelper.fragment.VotingFragment"
        android:label="VotingFragment"
        tools:layout="@layout/fragment_voting">
        <action
            android:id="@+id/action_votingFragment_to_dayFragment"
            app:destination="@id/dayFragment" />
    </fragment>
</navigation>